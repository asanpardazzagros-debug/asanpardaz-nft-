                    { 
                        name: 'ÿßÿ´ÿ± ÿßŸÜÿ™ÿ≤ÿßÿπ€å', 
                        description: 'ŸáŸÜÿ± ÿØ€åÿ¨€åÿ™ÿßŸÑ ÿ®ÿß ÿßŸÑŸáÿßŸÖ ÿßÿ≤ ÿ∑ÿ®€åÿπÿ™ Ÿà ⁄©Ÿá⁄©ÿ¥ÿßŸÜ‚ÄåŸáÿß€å ÿØŸàÿ±ÿØÿ≥ÿ™', 
                        image: 'https://picsum.photos/400/300?random=3',
                        badge: 'Ÿæÿ±ÿ∑ÿ±ŸÅÿØÿßÿ±',
                        attributes: 'ÿßŸÜÿ™ÿ≤ÿßÿπ€å, ŸÅÿ∂ÿß€å€å, ÿ±ŸÜ⁄Øÿßÿ±ŸÜ⁄Ø',
                        date: '€≥ ÿ±Ÿàÿ≤ Ÿæ€åÿ¥'
                    }
                ];
                
                // ÿß€åÿ¨ÿßÿØ ⁄©ÿßÿ±ÿ™‚ÄåŸáÿß€å NFT
                sampleNFTs.forEach(nft => {
                    const nftCard = document.createElement('div');
                    nftCard.className = 'nft-card';
                    nftCard.innerHTML = `
                        <div class="nft-badge">${nft.badge}</div>
                        <img src="${nft.image}" alt="${nft.name}" class="nft-image">
                        <div class="nft-info">
                            <div class="nft-name">${nft.name}</div>
                            <div class="nft-description">${nft.description}</div>
                            <div class="nft-meta">
                                <span><i class="fas fa-tags"></i> ${nft.attributes}</span>
                                <span><i class="fas fa-calendar"></i> ${nft.date}</span>
                            </div>
                            <div class="nft-actions">
                                <button class="btn btn-primary btn-small"><i class="fas fa-eye"></i> ŸÖÿ¥ÿßŸáÿØŸá</button>
                                <button class="btn btn-secondary btn-small"><i class="fas fa-share-alt"></i> ÿßÿ¥ÿ™ÿ±ÿß⁄©‚Äå⁄Øÿ∞ÿßÿ±€å</button>
                            </div>
                        </div>
                    `;
                    nftGrid.appendChild(nftCard);
                });
            }, 1500);
        }

        // ÿ®Ÿá ÿ±Ÿàÿ≤ÿ±ÿ≥ÿßŸÜ€å ÿ¢ŸÖÿßÿ±
        function updateStats() {
            const statValues = document.querySelectorAll('.stat-value');
            if (statValues.length > 0) {
                statValues[0].textContent = '3';
                statValues[1].textContent = '1';
                statValues[2].textContent = '124';
                statValues[3].textContent = '12';
            }
        }

        // Ÿæ€åÿ¥‚ÄåŸÜŸÖÿß€åÿ¥ ÿ™ÿµŸà€åÿ± ÿ¢ŸæŸÑŸàÿØ ÿ¥ÿØŸá
        const nftImageInput = document.getElementById('nft-image');
        const previewImage = document.getElementById('preview-image');
        
        nftImageInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewImage.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });

        // ÿ¥ÿ®€åŸá‚Äåÿ≥ÿßÿ≤€å ŸÅÿ±ÿ¢€åŸÜÿØ Mint
        const mintBtn = document.getElementById('mint-btn');
        mintBtn.addEventListener('click', function() {
            const name = document.getElementById('nft-name').value;
            const description = document.getElementById('nft-description').value;
            const imageFile = document.getElementById('nft-image').files[0];
            
            if (!name || !description || !imageFile) {
                showNotification('ŸÑÿ∑ŸÅÿß ÿ™ŸÖÿßŸÖ ŸÅ€åŸÑÿØŸáÿß€å ÿ∂ÿ±Ÿàÿ±€å ÿ±ÿß Ÿæÿ± ⁄©ŸÜ€åÿØ!', 'error');
                return;
            }
            
            mintBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ÿØÿ± ÿ≠ÿßŸÑ ÿ≥ÿßÿÆÿ™...';
            mintBtn.disabled = true;
            
            // ÿ¥ÿ®€åŸá‚Äåÿ≥ÿßÿ≤€å ŸÅÿ±ÿ¢€åŸÜÿØ Mint
            setTimeout(function() {
                showNotification(`NFT "${name}" ÿ®ÿß ŸÖŸàŸÅŸÇ€åÿ™ ÿ≥ÿßÿÆÿ™Ÿá ÿ¥ÿØ!`, 'success');
                mintBtn.innerHTML = '<i class="fas fa-magic"></i> ÿ≥ÿßÿÆÿ™ NFT';
                mintBtn.disabled = false;
                
                // Ÿæÿß⁄© ⁄©ÿ±ÿØŸÜ ŸÅÿ±ŸÖ
                document.getElementById('nft-name').value = '';
                document.getElementById('nft-description').value = '';
                document.getElementById('nft-image').value = '';
                document.getElementById('nft-attributes').value = '';
                previewImage.style.display = 'none';
                
                // ÿ®Ÿá ÿ±Ÿàÿ≤ÿ±ÿ≥ÿßŸÜ€å ÿ¢ŸÖÿßÿ±
                updateStats();
            }, 3000);
        });

        // ⁄©ÿ¥€åÿØŸÜ Ÿà ÿ±Ÿáÿß ⁄©ÿ±ÿØŸÜ ŸÅÿß€åŸÑ
        const fileUploadBtn = document.querySelector('.file-upload-btn');
        
        fileUploadBtn.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.style.background = 'rgba(0, 243, 255, 0.2)';
            this.style.borderColor = 'var(--primary)';
        });
        
        fileUploadBtn.addEventListener('dragleave', function() {
            this.style.background = 'rgba(0, 0, 0, 0.3)';
            this.style.borderColor = 'rgba(0, 243, 255, 0.5)';
        });
        
        fileUploadBtn.addEventListener('drop', function(e) {
            e.preventDefault();
            this.style.background = 'rgba(0, 0, 0, 0.3)';
            this.style.borderColor = 'rgba(0, 243, 255, 0.5)';
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                nftImageInput.files = files;
                
                // ŸÜŸÖÿß€åÿ¥ Ÿæ€åÿ¥‚ÄåŸÜŸÖÿß€åÿ¥
                const file = files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        previewImage.src = e.target.result;
                        previewImage.style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                }
            }
        });

        // ÿ®ÿßÿ±⁄Øÿ∞ÿßÿ±€å ÿßŸàŸÑ€åŸá
        window.addEventListener('load', function() {
            // ŸÜŸÖÿß€åÿ¥ ÿßÿπŸÑÿßŸÜ ÿÆŸàÿ¥‚Äåÿ¢ŸÖÿØ⁄ØŸà€å€å
            setTimeout(() => {
                showNotification('ÿ®Ÿá ÿØÿßÿ¥ÿ®Ÿàÿ±ÿØ NFT ÿ¢ÿ≥ÿßŸÜ‚ÄåŸæÿ±ÿØÿßÿ≤ ÿÆŸàÿ¥ ÿ¢ŸÖÿØ€åÿØ!', 'success');
            }, 1000);
        });
    </script>
</body>
</html>
