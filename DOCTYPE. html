                showNotification(`NFT "${name}" Ø¨Ø§ Ù…ÙˆÙÙ‚ÛŒØª Ø³Ø§Ø®ØªÙ‡ Ø´Ø¯!`, 'success');
                mintBtn.innerHTML = '<i class="fas fa-magic"></i> Ø³Ø§Ø®Øª NFT';
                mintBtn.disabled = false;
                
                // Ù¾Ø§Ú© Ú©Ø±Ø¯Ù† ÙØ±Ù…
                document.getElementById('nft-name').value = '';
                document.getElementById('nft-description').value = '';
                document.getElementById('nft-image').value = '';
                document.getElementById('nft-attributes').value = '';
                previewImage.style.display = 'none';
                
                // Ø¨Ù‡ Ø±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ø¢Ù…Ø§Ø±
                updateStats();
            }, 3000);
        });

        // Ú©Ø´ÛŒØ¯Ù† Ùˆ Ø±Ù‡Ø§ Ú©Ø±Ø¯Ù† ÙØ§ÛŒÙ„
        const fileUploadBtn = document.querySelector('.file-upload-btn');
        
        fileUploadBtn.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.style.background = 'rgba(0, 243, 255, 0.2)';
            this.style.borderColor = 'var(--primary)';
        });
        
        fileUploadBtn.addEventListener('dragleave', function() {
            this.style.background = 'rgba(0, 0, 0, 0.3)';
            this.style.borderColor = 'rgba(0, 243, 255, 0.5)';
        });
        
        fileUploadBtn.addEventListener('drop', function(e) {
            e.preventDefault();
            this.style.background = 'rgba(0, 0, 0, 0.3)';
            this.style.borderColor = 'rgba(0, 243, 255, 0.5)';
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                nftImageInput.files = files;
                
                // Ù†Ù…Ø§ÛŒØ´ Ù¾ÛŒØ´â€ŒÙ†Ù…Ø§ÛŒØ´
                const file = files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        previewImage.src = e.target.result;
                        previewImage.style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                }
            }
        });

        // Ø¨Ø§Ø±Ú¯Ø°Ø§Ø±ÛŒ Ø§ÙˆÙ„ÛŒÙ‡
        window.addEventListener('load', function() {
            // Ù†Ù…Ø§ÛŒØ´ Ø§Ø¹Ù„Ø§Ù† Ø®ÙˆØ´â€ŒØ¢Ù…Ø¯Ú¯ÙˆÛŒÛŒ
            setTimeout(() => {
                showNotification('Ø¨Ù‡ Ø¯Ø§Ø´Ø¨ÙˆØ±Ø¯ NFT Ø¢Ø³Ø§Ù†â€ŒÙ¾Ø±Ø¯Ø§Ø² Ø®ÙˆØ´ Ø¢Ù…Ø¯ÛŒØ¯!', 'success');
            }, 1000);
        });
    </script>
