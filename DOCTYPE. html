    <script>
        // ÿ™ÿ∫€å€åÿ± ÿ≠ÿßŸÑÿ™ ÿ¥ÿ®/ÿ±Ÿàÿ≤
        const themeToggle = document.getElementById('theme-toggle');
        themeToggle.addEventListener('change', function() {
            document.body.classList.toggle('light-mode');
            
            // ÿ∞ÿÆ€åÿ±Ÿá ÿ≠ÿßŸÑÿ™ ÿØÿ± localStorage
            if (document.body.classList.contains('light-mode')) {
                localStorage.setItem('theme', 'light');
                showNotification('ÿ≠ÿßŸÑÿ™ ÿ±Ÿàÿ≤ ŸÅÿπÿßŸÑ ÿ¥ÿØ', 'success');
            } else {
                localStorage.setItem('theme', 'dark');
                showNotification('ÿ≠ÿßŸÑÿ™ ÿ¥ÿ® ŸÅÿπÿßŸÑ ÿ¥ÿØ', 'success');
            }
        });

        // ÿ®ÿßÿ±⁄Øÿ∞ÿßÿ±€å ÿ≠ÿßŸÑÿ™ ÿ∞ÿÆ€åÿ±Ÿá ÿ¥ÿØŸá
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'light') {
            document.body.classList.add('light-mode');
            themeToggle.checked = true;
        }

        // ÿ≥€åÿ≥ÿ™ŸÖ ÿ™ÿ®‚ÄåŸáÿß
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');
        
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const tabId = tab.getAttribute('data-tab');
                
                // ÿ∫€åÿ±ŸÅÿπÿßŸÑ ⁄©ÿ±ÿØŸÜ ŸáŸÖŸá ÿ™ÿ®‚ÄåŸáÿß
                tabs.forEach(t => t.classList.remove('active'));
                tabContents.forEach(tc => tc.classList.remove('active'));
                
                // ŸÅÿπÿßŸÑ ⁄©ÿ±ÿØŸÜ ÿ™ÿ® ÿßŸÜÿ™ÿÆÿßÿ® ÿ¥ÿØŸá
                tab.classList.add('active');
                document.getElementById(tabId).classList.add('active');
                
                // ÿß⁄Øÿ± ÿ™ÿ® NFTŸáÿß€å ŸÖŸÜ ÿßÿ≥ÿ™ÿå NFTŸáÿß ÿ±ÿß ÿ®ÿßÿ±⁄Øÿ∞ÿßÿ±€å ⁄©ŸÜ
                if (tabId === 'my-nfts') {
                    loadNFTs();
                }
            });
        });

        // ÿ≥€åÿ≥ÿ™ŸÖ ÿßÿπŸÑÿßŸÜ‚ÄåŸáÿß
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.innerHTML = `<i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'exclamation-triangle' : 'info-circle'}"></i> ${message}`;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 5000);
        }

        // ÿ¥ÿ®€åŸá‚Äåÿ≥ÿßÿ≤€å ÿßÿ™ÿµÿßŸÑ ⁄©€åŸÅ ŸæŸàŸÑ
        const connectBtn = document.getElementById('connect-btn');
        const walletStatus = document.querySelector('.wallet-status');
        
        connectBtn.addEventListener('click', function() {
            // ÿ¥ÿ®€åŸá‚Äåÿ≥ÿßÿ≤€å ŸÅÿ±ÿ¢€åŸÜÿØ ÿßÿ™ÿµÿßŸÑ
            connectBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ÿØÿ± ÿ≠ÿßŸÑ ÿßÿ™ÿµÿßŸÑ...';
            connectBtn.disabled = true;
            
            setTimeout(function() {
                walletStatus.innerHTML = '<i class="fas fa-check-circle"></i> ⁄©€åŸÅ ŸæŸàŸÑ ÿ¥ŸÖÿß ÿ®ÿß ŸÖŸàŸÅŸÇ€åÿ™ ŸÖÿ™ÿµŸÑ ÿ¥ÿØ!';
                walletStatus.classList.remove('disconnected');
                walletStatus.classList.add('connected');
                connectBtn.innerHTML = '<i class="fas fa-plug"></i> ÿßÿ™ÿµÿßŸÑ ⁄©€åŸÅ ŸæŸàŸÑ';
                connectBtn.disabled = false;
                
                // ÿßÿ∂ÿßŸÅŸá ⁄©ÿ±ÿØŸÜ ÿ¢ÿØÿ±ÿ≥ ⁄©€åŸÅ ŸæŸàŸÑ
                const walletAddress = document.createElement('div');
                walletAddress.className = 'wallet-address';
                walletAddress.textContent = '0x742d35Cc...4e2D8b';
                walletStatus.parentNode.insertBefore(walletAddress, walletStatus.nextSibling);
                
                // ÿ®ÿßÿ±⁄Øÿ∞ÿßÿ±€å NFTŸáÿß Ÿæÿ≥ ÿßÿ≤ ÿßÿ™ÿµÿßŸÑ
                loadNFTs();
                updateStats();
                
                showNotification('ÿßÿ™ÿµÿßŸÑ ⁄©€åŸÅ ŸæŸàŸÑ ÿ®ÿß ŸÖŸàŸÅŸÇ€åÿ™ ÿßŸÜÿ¨ÿßŸÖ ÿ¥ÿØ', 'success');
            }, 2000);
        });

        // ÿ¥ÿ®€åŸá‚Äåÿ≥ÿßÿ≤€å ÿ®ÿßÿ±⁄Øÿ∞ÿßÿ±€å NFTŸáÿß
        function loadNFTs() {
