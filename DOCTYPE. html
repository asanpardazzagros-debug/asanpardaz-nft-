            setTimeout(function() {
                nftGrid.innerHTML = '';
                
                // ÿØÿßÿØŸá‚ÄåŸáÿß€å ŸÜŸÖŸàŸÜŸá ÿ®ÿ±ÿß€å NFTŸáÿß
